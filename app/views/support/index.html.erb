<% title "Information" %>
<% body_class "info" %>

<script type="text/javascript" charset="utf-8">
  var is_ssl = ("https:" == document.location.protocol);
  var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
  document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
</script>

<script type="text/javascript" charset="utf-8">
  var feedback_widget_options = {};
  feedback_widget_options.display = "overlay";  
  feedback_widget_options.company = "episode_calendar";
  feedback_widget_options.placement = "right";
  feedback_widget_options.color = "#000";
  feedback_widget_options.style = "idea";
  var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
</script>

<% cache do %>
<div id="features_wrapper">
  <h1 class="center"><strong>Episode Calendar Features</strong></h1>
  <ul id="features">
    <li>
      <%= image_tag("info/calendar.jpg") %>
      <h2>Personal TV-show calendar</h2>
      <p>Keep track of air dates for all your favorite TV-shows in your personal calendar.</p>
    </li>
    <li>
      <%= image_tag("info/show.jpg") %>
      <h2>Detailed show summary</h2>
      <p>Get a detailed summary for all your shows including episode recaps and statistics.</p>
    </li>
    <li>
      <%= image_tag("info/checklist.jpg") %>
      <h2>Practical episode checklist</h2>
      <p>Check off an episode once youâ€™ve seen it to easily keep track of what to see next.</p>
    </li>
  </ul>

  <h2 class="center big"><strong>Other awesome features</strong></h2>
  <ul id="additional">
    <li>
      <%= image_tag("icons/big/notifications.png") %>
      <h3>Notifications</h3>
      <p>Daily or weekly emails.</p>
    </li>
    <li>
      <%= image_tag("icons/big/rss.png") %>
      <h3>RSS feeds</h3>
      <p>Instant updates in your favorite reader.</p>
    </li>
    <li>
      <%= image_tag("icons/big/user.png") %>
      <%= image_tag("icons/big/coming_soon.png", :class => :coming_soon) %>
