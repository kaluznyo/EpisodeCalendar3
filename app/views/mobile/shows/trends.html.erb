<div data-role="navbar">
  <ul>
    <li><a id="topshows" class="navbar-links" data-theme="a" href="#">Top shows</a></li>
    <li><a id="newfollowers" class="navbar-links" data-theme="a" href="#">New followers</a></li>
    <li><a id="fastgrow" class="navbar-links" data-theme="a" href="#">Fastest growing shows</a></li>
  </ul>
</div><!-- /navbar -->

<div class="data-content topshows" data-theme="c">
  <ul data-role="listview" data-inset="true" data-mini="true">
    <% @top_shows.each_with_index do |show, i| %>
        <li>
          <% if show.banner %>
              <%= link_to(image_tag("pixel.gif", :"data-original" => environmentize(show.banner(:small)), :class => :lazy), show) %>
          <% else %>
              <%= image_tag("pixel.gif") %>
          <% end %>
          <h3><strong><%= link_to(show.name, show, :class => "alternative big") %></strong></h3>
          <span class="ui-li-aside"><strong><%= show.followers %> followers</strong> <%= raw print_popularity(show) %></span>
        </li>
    <% end %>
  </ul>
</div>

<div class="data-content newfollowers" data-theme="c">
