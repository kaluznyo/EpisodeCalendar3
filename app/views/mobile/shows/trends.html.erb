</div>


<script type="text/javascript">
  $(document).ready(function() {
      $('.data-content').hide();
      $('.topshows').show();
      $('#topshows').addClass('ui-btn-active');
      $(".navbar-links").click(function() {
          var klass = $(this).attr('id');
          $('.data-content').hide();
          $('.' + klass).show();
      });
  });
</script>