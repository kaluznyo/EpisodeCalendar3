<div data-theme="a" data-role="footer" data-position="fixed">
  <div data-role="navbar" data-iconpos="top">
    <ul>
      <% if !logged_in? %>
        <li>
          <a href="<%= new_user_session_path %>" data-theme="" data-icon="check">Log in</a>
        </li>
        <li>
          <a href="<%= new_user_registration_path %>" data-theme="" data-icon="plus">Sign up</a>
        </li>
      <% else %>
        <li>
          <a href="<%= calendar_path %>" data-theme="" data-icon="grid">Calendar</a>
        </li>
        <li>
          <a href="<%= followings_path %>" data-theme="" data-icon="star">My shows</a>
        </li>
        <li>
          <%= link_to "Logout", destroy_session_path(current_user), :method => :delete, :"data-icon" => "delete", :"data-ajax" => "false" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>