<div data-theme="b" data-role="header">
  <div class="ui-grid-b">
      <div class="ui-block-a align-left">
          <a data-role="button" href="#" class="toggle-button" data-icon="arrow-d" data-inline="true" data-iconpos="left">Menu</a>
          <div class="main-menu toggle-content">
            <ul>
                <% if logged_in? %>
                  <li><%= link_to "#{icon("calendar")} Calendar".html_safe, calendar_path, :"data-transition" => "slide", :class => is_current?(:shows,:calendar) %></li>
                  <li><%= link_to "#{icon("heart")} My shows".html_safe, followings_path, :"data-transition" => "slide", :class => is_current?(:followings,:index) %></li>
                  <li><%= link_to "#{icon("eye")} Unwatched".html_safe, unwatched_path, :"data-transition" => "slide", :class => is_current?(:seen_episodes,:index) %></li>
                  <li><%= link_to "#{icon("fire")} Trends".html_safe, trends_path, :"data-transition" => "slide", :class => is_current?(:shows,:trends) %></li>
                  <li><%= link_to "#{icon("question")} FAQ".html_safe, faqs_path, :"data-transition" => "slide", :class => is_current?(:faqs,:index) %></li>
                  <li><%= link_to "#{icon("cog")} Settings".html_safe, settings_path, :"data-transition" => "slide", :class => is_current?("devise/registrations",:edit) %></li>
                  <li><%= link_to "#{icon("minus-circle")} Logout (#{current_user.display_name})".html_safe, destroy_session_path(current_user), :"data-transition" => "slide", :class => is_current?(:sessions,:destroy), :method => :delete %></li>
                <% else %>
                  <li><%= link_to "#{icon("lock")} Log in".html_safe, new_user_session_path, :"data-transition" => "slide", :class => is_current?("devise/sessions",:new) %></li>
                  <li><%= link_to "#{icon("key")} Sign up".html_safe, new_user_registration_path, :"data-transition" => "slide", :class => is_current?("devise/registrations",:new) %></li>
                  <li><%= link_to "#{icon("fire")} Trends".html_safe, trends_path, :"data-transition" => "slide", :class => is_current?(:shows,:trends) %></li>
                  <li><%= link_to "#{icon("question")} FAQ".html_safe, faqs_path, :"data-transition" => "slide", :class => is_current?(:faqs,:index) %></li>
                <% end %>
            </ul>
          </div>
      </div>
      <div class="ui-block-b center">
        <%= link_to(image_tag("logos/tv.png", :width => 38), root_path, :id => "logo", :"data-transition" => "slide", :"data-direction" => "reverse") %>
      </div>
      <div class="ui-block-c align-right">
          <a data-role="button" href="#" class="toggle-button" data-icon="search" data-inline="true" data-iconpos="left">Search</a>
          <div class="search toggle-content">
            <%= form_tag(search_path, :method => :get) do %>
              <%= text_field_tag :q, nil, :placeholder => "Enter show name", :"data-mini" => "true" %>
              <%= submit_tag "Go", :name => nil %>
            <% end %>
          </div>
      </div>
  </div>
</div>