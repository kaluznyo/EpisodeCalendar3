<html>
<head>
  <title><%= yield(:title) || "Keep track of your TV shows!" %> - TV Episode Calendar</title>
  <meta http-equiv="content-type" content="text/html;charset=ISO-8859-1" />
  <meta name="description" content="<%= yield(:meta) || "Complete TV Guide and listing for all of your favorite TV shows! Add and manage TV shows in your own personal calendar." %>" />
  <meta content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

  <%= stylesheet_link_tag "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" %>
  <%= stylesheet_link_tag :episode %>
  <%= stylesheet_link_tag :mobile %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag :application %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" %>
  <%= javascript_include_tag "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js" %>
  <%= javascript_include_tag :mobile %>
  <%= yield :head %>
  <link rel="icon" href="/favicon.png?1" type="image/x-icon" />
  <link rel="shortcut icon" href="/favicon.png?1" type="image/ico" />
</head>
<body class="<%= find_named_routes.join(" ") %> <%= yield :body_class %>">

  <div data-role="page">
    <%= render :partial => "partials/header" %>
    <div id="content" data-role="content">
      <%= yield %>
    </div>
  </div>

</body>
</html>