<% title "Browse users" %>
<div id="user_pagination">
  <%= link_to("0-9", users_by_letter_path("0-9"), :class => @letter == "0-9" ? "active" : "normal") %>
  <% @alphabet.each do |letter| %>
    <%= link_to(letter.upcase, users_by_letter_path(letter), :class => @letter == letter ? "active" : "normal") %>
  <% end %>
  <p>(<%= @users.size %>/<%= @total %> users)</p>
</div>
<ul id="users">
<% @users.each do |user| %>
  <li class="avatar">
    <div class="image"><%= link_to("", profile_path(user), :style => "background-image: url('#{user.gravatar_size(60)}');") %></div>
    <p><%= link_to(user.display_name, profile_path(user)) %></p>
    <span>Following <%= user.followings_count %> shows</span>
  </li>
<% end %>
</ul>