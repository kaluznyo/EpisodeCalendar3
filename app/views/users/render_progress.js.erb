$("#preloader").hide();

var smiley = <%= @seen/7 %>;

$("#progress .status").addClass("<%= progress_icon(@seen) %>");
$("#progress span.left").text("<%= @episodes_count - @marked_count %>");
$("#progress span.marked").text("<%= @marked_count %>");
$("#progress span.count").text("<%= @episodes_count %>");
$("#progress_bar span").text("<%= @seen %>");
$("#progress .footer strong").text("<%= minutes_ago_in_words(@time_wasted) %>");

$("#progress .header, #progress .footer").removeClass("hidden").hide().fadeIn(200);
$("#progress_bar_wrapper").fadeIn(200, function(){
  $("#progress_bar .bar").animate({ width: "<%= @seen %>%" });
});