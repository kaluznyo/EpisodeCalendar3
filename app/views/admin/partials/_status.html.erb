<ul id="system_status">
  <% if @shows_updated.any? %>
  <li>
    <h2>Queue</h2>
    <p><%= system_status(@shows_updated.first.created_at, @queue_update.run_interval) %></p>
    <p>
      <strong>Update interval</strong><br />
      <%= @queue_update.humanize.capitalize %>
    </p>
    <p>
      <strong>Last occurance</strong><br />
      <%= time_ago_in_words(@shows_updated.first.created_at) %> ago
    </p>
  </li>
  <% end %>

