<h2 style="font-size: 16px;">Hi <span style="font-size: 24px; color: #da0c87;"><%= @user.display_name %>!</span> These are your episodes that air today!</h2>

<% @episodes.each do |episode| %>
  <strong style="font-size: 14px;"><%= episode[0] %></strong><br />
  <span style="color: #666666;"><%= episode[1] %>:</span> <%= episode[2] %><br /><br />
<% end %>