<% unless @system_message.try(:value).blank? %>
<div id="<%= @system_message.additional_data %>"><%= @system_message.value %></div>
<% end %>

<div class="box">
  <div class="inner">
  	<h3>Most popular shows</h3>
  	<ul id="tag_cloud">		  
  		<%= raw(build_tag_cloud(@tags, %w(tag1 tag2 tag3 tag4 tag5 tag6 tag7 tag8 tag9 tag10))) %>
  	</ul>
  </div>
</div> 
<div class="box middle">
  <div class="inner">
  	<h3>Recently favorited shows</h3>
  	<ul id="recently_favorited">
    <% @recently_favorited.each do |following| %>
  		<li>
  		  <%= link_to "#{following.show.name}", show_path(:permalink => following.show.permalink) %> <span><%= "(#{pluralize(following.show.followers, "follower")})" %></span>
  	  </li>
  		<% end %>
  	</ul>
  </div>
</div>
<div class="box">
  <div class="inner">
  	<h3>Share, follow or contribute</h3>
  	
    <%= render "partials/scripts/share" %>
  	
  	<p id="follow">
  	  <strong>See all new site updates and future ideas via Twitter!</strong>
  	  <iframe allowtransparency="true" frameborder="0" scrolling="no" src="http://platform.twitter.com/widgets/follow_button.html?screen_name=episodecalendar&link_color=aaaaff&text_color=ffffff" style="width:300px; height:20px; margin: 5px 0 0 0;"></iframe>
  	</p>
  	
  	<div id="rails_logo">
  	  <%= image_tag("icons/rails.png") %>
  	  <p><strong>I'm looking for Ruby on Rails developers!</strong><br />
  	  Are you looking for a real world project to be a part of? Or have you just started with Rails and want to learn more? Contact me and lets talk!</p>
  	</div>
  	
  	<p>
  	  <%= link_to("", "http://www.frexuz.com", :target => "_blank", :id => :frexuz_logo) %>
  	</p>
  </div>
</div>